<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:ignore="HardcodedText"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:orientation="horizontal"
        android:paddingVertical="75dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Welcome to "
            android:textStyle="italic"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Campulsy "
            android:textStyle="italic"
            android:textColor="#FF0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="!! "
            android:textStyle="italic"
            android:textColor="#000000" />
    </LinearLayout>


    <TextView
        android:layout_below="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Campus:"
        android:textStyle="italic"
        android:id="@+id/collegeHint"
        android:paddingBottom="10dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/collegeHint"
        android:id="@+id/pickCollege"
        android:background="@drawable/spinner_style"
        android:paddingHorizontal="20dp"/>

    <TextView
        android:id="@+id/otherSelectedInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Information"
        android:gravity="center"
        android:paddingBottom="75dp"
        android:layout_above="@id/loginButton"/>

    <Button
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1976d2"
        app:strokeColor="#1976d2"
        app:strokeWidth="2dp"
        app:elevation="5dp"
        app:cornerRadius="10dp"
        android:layout_alignParentBottom="true"
        android:text="Proceed to Login"/>

</RelativeLayout>